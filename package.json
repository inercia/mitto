{
  "name": "mitto-web",
  "version": "1.0.0",
  "description": "JavaScript tests for Mitto web interface",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:ui": "npx playwright test --config=tests/ui/playwright.config.js",
    "test:ui:headed": "npx playwright test --config=tests/ui/playwright.config.js --headed",
    "test:ui:debug": "npx playwright test --config=tests/ui/playwright.config.js --debug",
    "test:ui:report": "npx playwright show-report tests/ui/playwright-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/web/static"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {},
    "verbose": true
  }
}

