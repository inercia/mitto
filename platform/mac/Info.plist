<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Bundle identification -->
    <key>CFBundleIdentifier</key>
    <string>io.github.inercia.mitto</string>
    
    <key>CFBundleName</key>
    <string>Mitto</string>
    
    <key>CFBundleDisplayName</key>
    <string>Mitto</string>
    
    <key>CFBundleExecutable</key>
    <string>mitto-app</string>
    
    <!-- Version information -->
    <key>CFBundleVersion</key>
    <string>1.0.0</string>
    
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    
    <!-- Bundle type and signature -->
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    
    <key>CFBundleSignature</key>
    <string>????</string>
    
    <!-- Icon -->
    <key>CFBundleIconFile</key>
    <string>AppIcon</string>
    
    <!-- macOS requirements -->
    <key>LSMinimumSystemVersion</key>
    <string>10.15</string>
    
    <key>NSHighResolutionCapable</key>
    <true/>
    
    <!-- Application category -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.developer-tools</string>
    
    <!-- Prevent app from appearing in Dock when running in background -->
    <!-- Uncomment if you want a menu bar only app -->
    <!-- <key>LSUIElement</key> -->
    <!-- <true/> -->
    
    <!-- Copyright -->
    <key>NSHumanReadableCopyright</key>
    <string>Copyright Â© 2024 Mitto Contributors. MIT License.</string>
    
    <!-- Network access (required for localhost web server) -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsLocalNetworking</key>
        <true/>
    </dict>
    
    <!-- Principal class for Cocoa apps -->
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>
    
    <!-- Supported platforms -->
    <key>CFBundleSupportedPlatforms</key>
    <array>
        <string>MacOSX</string>
    </array>
    
    <!-- Info string -->
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    
    <!-- Development region -->
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>
</dict>
</plist>

