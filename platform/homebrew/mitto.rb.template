# typed: strict
# frozen_string_literal: true

# Homebrew formula for Mitto - CLI client for the Agent Communication Protocol (ACP)
class Mitto < Formula
  desc "CLI client for the Agent Communication Protocol (ACP)"
  homepage "https://github.com/inercia/mitto"
  version "{{VERSION}}"
  license "Apache-2.0"

  on_macos do
    if Hardware::CPU.intel?
      url "{{URL_AMD64}}"
      sha256 "{{SHA256_AMD64}}"
    else
      url "{{URL_ARM64}}"
      sha256 "{{SHA256_ARM64}}"
    end
  end

  on_linux do
    if Hardware::CPU.intel?
      url "https://github.com/inercia/mitto/releases/download/v{{VERSION}}/mitto-linux-amd64.tar.gz"
      sha256 "{{SHA256_LINUX_AMD64}}"
    else
      url "https://github.com/inercia/mitto/releases/download/v{{VERSION}}/mitto-linux-arm64.tar.gz"
      sha256 "{{SHA256_LINUX_ARM64}}"
    end
  end

  def install
    bin.install "mitto"
  end

  def caveats
    <<~EOS
      Mitto provides a Web for interacting with AI coding agents (ACP Servers).

    Supported ACP servers:
      - Auggie (auggie)
      - Claude Code (claude-code)
      - GitHub Copilot (copilot)
      - and many more... check https://agentclientprotocol.com/get-started/agents

      Quick start:
        1. Run: `mitto config create` and then review `~/.mittorc`
        1. Run: `mitto web`
        2. Open: http://localhost:8080

      Configuration is stored in:
        #{Dir.home}/.mittorc`

      For more information, visit:
        https://github.com/inercia/mitto
    EOS
  end

  test do
    assert_match "Mitto is a command-line interface", shell_output("#{bin}/mitto --help")
  end
end
